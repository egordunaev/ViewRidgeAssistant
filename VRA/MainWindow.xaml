<Window x:Class="VRA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRA"
        mc:Ignorable="d"
        Title="ViewRidgeAssistant" Height="445.762" Width="660.285">
    <Grid>

        <Button Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="582,31,0,0" VerticalAlignment="Top" Width="60" Click="btnAdd_Click" Height="50"/>
        <DataGrid Name="dgArtists" Height="341" VerticalAlignment="Top" Margin="75,31,75,0" Visibility="Visible">

        </DataGrid>
        <Button Name="btnRefresh" Content="Обновить" HorizontalAlignment="Left" Margin="582,196,0,0" VerticalAlignment="Top" Width="60" Click="btnRefresh_Click" Height="49"/>
        <Button Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="582,141,0,0" VerticalAlignment="Top" Width="60" Click="btnDelete_Click" Height="50"/>
        <Button Name ="btnEdit" Content="Изменить" HorizontalAlignment="Left" Margin="582,86,0,0" VerticalAlignment="Top" Width="60" Click="btnEdit_Click" Height="50"/>
        <Button Name="btnDataBase" Content="Подключение" HorizontalAlignment="Left" Margin="582,250,0,0" VerticalAlignment="Top" Width="60" Click="btnDataBase_Click" Height="51"/>
        <Menu Height="25" HorizontalAlignment="Stretch" Name="mainMenu" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <MenuItem Name="DataBase" Header="База данных">
                <MenuItem Name="dataBaseS" Header="Настроить соединение с базой данных" Click="btn_DataBase_Click"></MenuItem>
            </MenuItem>
            <MenuItem Name="Reports" Header="Отчеты">
                <MenuItem Name="ExcelExporterButton" Header="Экспорт таблицы Excel"/>
            </MenuItem>
            <MenuItem Name="About" Header="О программе"></MenuItem>
        </Menu>
        <StatusBar Name="statusBar" Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Margin="1,0" VerticalAlignment="Bottom" Height="30">
            <Label Name="statusLabel" Content="Работа с таблицей:" Visibility="Visible"></Label>  
        </StatusBar>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <Button HorizontalAlignment="Left" Name="btnArtists" VerticalAlignment="Top" Height="52" Width="70" Click="btnArtists_Click">
                <Button.Content>
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Margin="1" FontSize="10">Художники</TextBlock>
                    </StackPanel>
                </Button.Content>
                <Button.ToolTip>
                    <TextBlock>Таблица художников</TextBlock>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
